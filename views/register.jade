extends layout
block content
    form(method='post' action='/login/register')
        input.form-control(type='text' name='username' placeholder='Input username here')
        input.form-control(type='password' name='password' placeholder='Input password here')
        input.form-control(type='password' name='passwordRepeat' placeholder='Repeat password here')
        button.btn.btn-primary(type='submit') Register
